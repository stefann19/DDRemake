<UserControl x:Class="DDRemakeProject.UserControls.CharIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DDRemakeProject.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Grid.Row="0" Grid.Column="0" >

        <Grid.RowDefinitions>
            <RowDefinition ></RowDefinition>
            <RowDefinition Height="11"></RowDefinition>
        </Grid.RowDefinitions>

        <Image Name="Icon" Grid.Row="0" Source="../Assets/char/mage/faceset.png" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <Grid Grid.Row="1" Margin="5,0">
            <Rectangle Fill="Gray" ></Rectangle>
            <Rectangle Name="HpValueRect" Width="50" Fill="Red" HorizontalAlignment="Left"></Rectangle>
            <TextBlock Name="HpValue" Text="50/100"  Background="#00000000" FontSize="10" FontWeight="Bold" HorizontalAlignment="Center" FontFamily="MS Gothic"></TextBlock>
        </Grid>
    </Grid>
</UserControl>
