<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DDRemakeProject"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:userControls="clr-namespace:DDRemakeProject.UserControls"
             xmlns:views="clr-namespace:DDRemakeProject.Views"
             x:Class="DDRemakeProject.UserControls.CharacterCreationSubMenu"
             mc:Ignorable="d" Width="Auto" Height="Auto"
             >
    <!--DataContext="{Binding RelativeSource={RelativeSource Self}}"-->
    <UserControl.Resources>
        <BitmapImage UriSource="../Assets/monster/bat/idle.gif"  x:Key="Race"></BitmapImage>
    </UserControl.Resources>
    <StackPanel Name="LayoutRoot" Orientation="Horizontal" SnapsToDevicePixels="True" >
        <StackPanel>
            <Grid x:Name="GridPoints" Height="79" Width="296" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100*"/>
                    <ColumnDefinition Width="40*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25*"/>
                    <RowDefinition Height="25*"/>
                    <RowDefinition Height="25*"/>
                    <RowDefinition Height="15*"/>
                </Grid.RowDefinitions>

                <Rectangle RadiusX="10" RadiusY="10" StrokeDashCap="Triangle" StrokeDashArray="8" Style="{DynamicResource SimpleSection}" Grid.RowSpan="4" Grid.ColumnSpan="2"/>
                <TextBlock HorizontalAlignment="Center" Height="23.333" TextWrapping="Wrap" VerticalAlignment="Top" Width="94" TextAlignment="Center" Style="{DynamicResource HeaderSection}" Margin="101,0" Grid.RowSpan="2" Text="Points" Grid.ColumnSpan="2"/>
                <TextBlock Grid.Row="1" Text="Points remaining:" Style="{DynamicResource SmallTextSection}" Margin="10,0"></TextBlock>
                <TextBlock Grid.Row="2" Text="Points used on this character:" Style="{DynamicResource SmallTextSection}" Margin="10,0" ></TextBlock>

                <TextBlock Grid.Row="1" Grid.Column="1" Text="100" Style="{DynamicResource SmallValueTextSection}" Margin="10,0"></TextBlock>
                <TextBlock Grid.Row="2" Grid.Column="1" Text="20" Style="{DynamicResource SmallValueTextSection}" Margin="10,0" ></TextBlock>


            </Grid>
            <!--<Grid x:Name="GridName" Height="68.4" Canvas.Left="10" Canvas.Top="10" Width="296">
