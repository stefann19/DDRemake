<UserControl x:Class="DDRemakeProject.Views.NameSelectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DDRemakeProject.Views"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:viewModels="clr-namespace:DDRemakeProject.ViewModels"
             mc:Ignorable="d" 
             Height="Auto" Width="Auto">

    <Grid x:Name="LayoutRoot" MinHeight="70" DataContext="{Binding Path=., RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl},Mode=TwoWay}" >
        <Rectangle Style="{DynamicResource SimpleSection}"/>
        <TextBox Margin="20" Foreground="{DynamicResource AccentColorBrush}" Text="{Binding CharacterName,Mode=TwoWay}" mah:TextBoxHelper.Watermark="Insert name here" TextWrapping="Wrap" VerticalAlignment="Center" MinHeight="25" MaxWidth="100" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBlock Height="23.333" TextWrapping="Wrap" VerticalAlignment="Top" Width="94" TextAlignment="Center" Style="{DynamicResource HeaderSection}" Text="Name"/>
    </Grid>
</UserControl>
