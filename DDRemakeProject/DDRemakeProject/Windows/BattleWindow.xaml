<Window x:Class="DDRemakeProject.BattleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"

        xmlns:local="clr-namespace:DDRemakeProject"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="BattleWindow" Width="648" Height="505" >
    <Window.Resources>
        <ImageBrush x:Key="AddButtonImageBrush" ImageSource="../Attack.png" Stretch="UniformToFill"/>


        <ControlTemplate x:Key="Icons" TargetType="ContentControl">
            <Grid Grid.Row="0" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition ></RowDefinition>
                    <RowDefinition Height="7"></RowDefinition>
                </Grid.RowDefinitions>
                <Image Grid.Row="0" Source="{DynamicResource ResourceKey=Img}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <Grid Grid.Row="1" Margin="5,0">
                    <Rectangle Fill="Gray" ></Rectangle>
                    <Rectangle Width="51.125" Fill="Red" HorizontalAlignment="Left" ></Rectangle>
                </Grid>


            </Grid>
        </ControlTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="52"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="115"/>
        </Grid.RowDefinitions>

        <!--#region Background Image + Black Strips -->
        <Image Source="../Assets/backgrounds/21.png" Stretch="None" Grid.Row="1"/>
        <Rectangle Grid.Row="0" Fill="Black"></Rectangle>
        <Rectangle Grid.Row="2" Fill="Black"></Rectangle>
        <!--#endregion-->
        <!--#region Characters and action-->
        <Image Grid.Row="1" Panel.ZIndex="1" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100"  gif:ImageBehavior.AutoStart="True" gif:ImageBehavior.AnimatedSource="../Assets/char/mage/idle.gif" Margin="84,203,0,0"/>
        <Image Grid.Row="1" Panel.ZIndex="1" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100"  gif:ImageBehavior.AutoStart="True" gif:ImageBehavior.AnimatedSource="../Assets/char/warrior/idle.gif" Margin="32,168,0,0"/>
        <Image Grid.Row="1" Panel.ZIndex="1" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100"  gif:ImageBehavior.AutoStart="True" gif:ImageBehavior.AnimatedSource="../Assets/char/paladin/idle.gif" Margin="23.5,223.5,0,0" Grid.RowSpan="2"/>


        <Image Grid.Row="1" Panel.ZIndex="1" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100"  gif:ImageBehavior.AutoStart="True" gif:ImageBehavior.AnimatedSource="../Assets/monster/bat/idle.gif" Margin="466,203,0,0" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1" ScaleX="-1"/>
                    <SkewTransform AngleY="0" AngleX="0"/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Grid.Row="1" Panel.ZIndex="1" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100"  gif:ImageBehavior.AutoStart="True" gif:ImageBehavior.AnimatedSource="../Assets/monster/boar/idle.gif" Margin="514,168,0,0" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1" ScaleX="-1"/>
                    <SkewTransform AngleY="0" AngleX="0"/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Grid.Row="1" Panel.ZIndex="1" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100"  gif:ImageBehavior.AutoStart="True" gif:ImageBehavior.AnimatedSource="../Assets/monster/dino/idle.gif" Margin="514,223.5,0,0" Grid.RowSpan="2" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1" ScaleX="-1"/>
                    <SkewTransform AngleY="0" AngleX="0"/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

        <!--#endregion-->


        <!--#region Bottom Grid-->
        <Grid Height="115" Width="640" Grid.Row="2" >
            <!--#region rows and columns definitions-->
            <Grid.RowDefinitions>

                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="0.665*"/>
                <ColumnDefinition Width="0.665*"/>
                <ColumnDefinition Width="1.7*"/>
                <ColumnDefinition Width="1.3*"/>

            </Grid.ColumnDefinitions>
            <!--#endregion-->

            <!--#region Characters Icons -->

            <ContentControl Grid.Row="0" Grid.Column="0" Template="{StaticResource ResourceKey=Icons}">
                <ContentControl.Resources>
                    <ImageSource x:Key="Img">../Assets/char/mage/faceset.png</ImageSource>
                </ContentControl.Resources>

            </ContentControl>
            <ContentControl Grid.Row="0" Grid.Column="1" Template="{StaticResource ResourceKey=Icons}">
                <ContentControl.Resources>
                    <ImageSource x:Key="Img">../Assets/char/mage/faceset.png</ImageSource>
                </ContentControl.Resources>
            </ContentControl>
            <ContentControl Grid.Row="0" Grid.Column="2" Template="{StaticResource ResourceKey=Icons}">
                <ContentControl.Resources>
                    <ImageSource x:Key="Img">../Assets\char\warrior\faceset.png</ImageSource>
                </ContentControl.Resources>
            </ContentControl>
            <ContentControl Grid.Row="1" Grid.Column="0" Template="{StaticResource ResourceKey=Icons}">
                <ContentControl.Resources>
                    <ImageSource x:Key="Img">../Assets\monster\bat\idle.gif</ImageSource>
                </ContentControl.Resources>

            </ContentControl>
            <ContentControl Grid.Row="1" Grid.Column="1" Template="{StaticResource ResourceKey=Icons}">
                <ContentControl.Resources>
                    <ImageSource x:Key="Img">../Assets\monster\boar\idle.gif</ImageSource>
                </ContentControl.Resources>
            </ContentControl>
            <ContentControl Grid.Row="1" Grid.Column="2" Template="{StaticResource ResourceKey=Icons}">
                <ContentControl.Resources>
                    <ImageSource x:Key="Img">../Assets/monster/dino/idle.gif</ImageSource>
                </ContentControl.Resources>
            </ContentControl>
            <!--#endregion-->

            <!--#region Actions-->
            <Image Grid.Row="0" Grid.Column="3" Source="../Attack.png"/>
            <Image Grid.Row="0" Grid.Column="4" Source="../Defend.png"/>
            <Image Grid.Row="1" Grid.Column="3" Source="../Spells.png"/>
            <Image Grid.Row="1" Grid.Column="4" Source="../Inventory.png"/>
            <!--#endregion-->

            <!--#region Selected Character-->
            <Grid Grid.Column="5" Grid.RowSpan="2">
                <!--#region Column and row definitions-->
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <!--#endregion-->
                
                <Label Grid.Row="0" Grid.ColumnSpan="2" Content="Name" Foreground="White" HorizontalContentAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Center"/>
                <!--#region HP-->
                <Label Grid.Row="1" Content="HP" Foreground="White" HorizontalAlignment="Center"></Label>
                <Label Grid.Row="1" Grid.Column="1" Content="12../" Foreground="Red" HorizontalAlignment="Right" HorizontalContentAlignment="Right" VerticalContentAlignment="Bottom" FontFamily="MS Gothic" VerticalAlignment="Bottom" FontSize="14" FontWeight="Bold"/>
                <Image Grid.Row="2" Grid.ColumnSpan="2" Source="../background.png" ></Image>
                <Image Grid.Row="2" Stretch="Fill" Grid.ColumnSpan="2" Source="../red.png" Margin="6,7" ></Image>
                <!--#endregion-->
                <!--#region MP-->
                <Label Grid.Row="3" Content="MP" Foreground="White" HorizontalAlignment="Center"></Label>
                <Label Grid.Row="3" Grid.Column="1" Content="12" Foreground="purple" HorizontalAlignment="Right" HorizontalContentAlignment="Right" VerticalContentAlignment="Bottom" FontFamily="MS Gothic" VerticalAlignment="Bottom" FontSize="14" FontWeight="Bold"/>
                <Image Grid.Row="4" Grid.ColumnSpan="2" Source="../background.png" ></Image>
                <Image Grid.Row="4" Stretch="Fill" Grid.ColumnSpan="2" Source="../purple.png" Margin="6,7" ></Image>
                <!--#endregion-->
            </Grid>

            <Image Grid.Column="6" Grid.RowSpan="2" Source="../faceset.png" ></Image>
            <!--#endregion-->

        </Grid>
        <!--#endregion-->



    </Grid>
</Window>
